@model TodoManager.Models.RegisterViewModel

@{
    ViewData["Title"] = "Register";
}

<div class="m-2">
    <h1 class="text-xl font-bold mb-4">Register</h1>
    <form asp-action="Register" asp-controller="Account" method="post" class="flex flex-col w-1/2 gap-4">

        <input asp-for="UserName" placeholder="Enter your username"
               class="p-2 border border-gray-400 outline-none" />
        <span asp-validation-for="UserName" class="text-red-500 text-sm"></span>

        <input asp-for="Email" placeholder="Enter your email"
               class="p-2 border border-gray-400 outline-none" />
        <span asp-validation-for="Email" class="text-red-500 text-sm"></span>

        <input asp-for="Password" type="password" placeholder="Enter your password"
               class="p-2 border border-gray-400 outline-none" />
        <span asp-validation-for="Password" class="text-red-500 text-sm"></span>

        <input asp-for="ConfirmPassword" type="password" placeholder="Confirm your password"
               class="p-2 border border-gray-400 outline-none" />
        <span asp-validation-for="ConfirmPassword" class="text-red-500 text-sm"></span>

        <button type="submit" class="bg-blue-500 text-white p-2 rounded-md">Register</button>
    </form>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
